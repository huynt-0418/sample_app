<div class="stats">
  <%= link_to following_user_path(user) do %>
    <strong id="following" class="stat"><%= user.following.count %></strong><%= t "views.users.following" %>
  <% end %>
  <%= link_to followers_user_path(user) do %>
    <strong id="followers" class="stat"><%= user.followers.count %></strong><%= t "views.users.followers" %>
  <% end %>
</div>
